{
  "name": "psicobot-chat",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently -n TW,NODE -c magenta,cyan \"npm:css:dev\" \"nodemon src/server.js\"",
    "css:dev": "tailwindcss -i ./src/styles/input.css -o ./public/css/tw.css --watch",
    "build:css": "tailwindcss -i ./src/styles/input.css -o ./public/css/tw.css --minify",
    "start": "NODE_ENV=production node src/server.js"
  },
  "dependencies": {
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-handlebars": "^7.1.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.10",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.13"
  }
}